<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advanced_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Przypisz gest do urządzenia i akcji"
                android:layout_marginBottom="8dp"/>

            <!-- wybór gestu -->
            <Spinner
                android:id="@+id/gesture_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- wybór urządzenia -->
            <Spinner
                android:id="@+id/device_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- wybór akcji zależnej od urządzenia -->
            <Spinner
                android:id="@+id/action_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/save_mapping_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zapisz powiązanie"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/export_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eksportuj"/>

                <Button
                    android:id="@+id/import_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importuj"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zapisane mapowania:"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/mappings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
