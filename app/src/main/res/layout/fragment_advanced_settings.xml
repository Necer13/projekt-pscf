<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advanced_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add your views here -->
            <TextView
                android:id="@+id/example_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuration"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/export_config_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export configuration"/>
            <Button
                android:id="@+id/import_config_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import configuration"/>

            <!-- You can add more views as needed -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
