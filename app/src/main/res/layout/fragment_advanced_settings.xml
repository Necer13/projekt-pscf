<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advanced_settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Przypisz gest do akcji"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/gesture_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/action_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/save_mapping_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save mapping"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/show_mappings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show all mappings"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/mapping_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No mappings yet" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
